<div class="govuk-accordion__section ">
  <div class="govuk-accordion__section-header">
    <h2 class="govuk-accordion__section-heading">
      <span class="govuk-accordion__section-button" id="accordion-default-heading-3">
          Granting Authority
      </span>
    </h2>
  </div>
  <div id="accordion-default-content-3" class="govuk-accordion__section-content"
    aria-labelledby="accordion-default-heading-3">
    <div class="govuk-form-group">
      <select class="govuk-select" id="filter-ga" name="ga"
      aria-label="Drop down list that shows Filter by type">
        <option value=""></option>
        <% gaList.forEach(function(ga){ %>
          <% if ((filters.ga + "").toLowerCase() == ga.grantingAuthorityName.toLowerCase()) { %>
            <option value="<%= ga.grantingAuthorityName %>" selected> <%= ga.grantingAuthorityName %></option>
          <% }else{ %>
            <option value="<%= ga.grantingAuthorityName %>"> <%= ga.grantingAuthorityName %> </option>
          <% } %>
        <% })%>
      </select>
    </div>
  </div>
</div>