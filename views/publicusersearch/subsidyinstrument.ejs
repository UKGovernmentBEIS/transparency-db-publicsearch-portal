<body class="govuk-template__body app-example-page">
  <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>

  <%- include('../partials/header.ejs') %>
  <div class="govuk-width-container ">

    <main id="main-content" role="main">
      <%- include('../partials/banner.ejs') %>
      <form action="/legalgrantingdate" method="POST" class="govuk-main-wrapper ">

        <a href="/spendingsector" class="govuk-back-link" aria-label="Back to spending sector question page">Back</a>

        <!--************************************
          Gov.UK public user search - Body design 
          ************************************ -->

        <fieldset class="govuk-fieldset" aria-describedby="type-hint">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l govuk-grid-column-two-thirds">
            <!-- <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds"> -->
            <h1 class="govuk-fieldset__heading">
              Which types of subsidies do you want to search for?
            </h1>
            <!-- </div>
              </div> -->
          </legend>
          <div class="govuk-grid-row govuk-form-group">
            <div class="govuk-grid-column-full">
              <p id="type-hint" class="govuk-body " for="subsidylabel">
                You can select more than one type, or leave all options unselected to search for all types.
              </p>
            </div>
          </div>
          <div class="govuk-checkboxes govuk-form-group" data-module="govuk-checkboxes">
            <div class="govuk-checkboxes__item">
              <input class="govuk-checkboxes__input" id="subsidyinstrument-0" name="subsidyinstrument0" type="checkbox"
                value="Select all"
                data-aria-controls="conditional-subsidyinstrument-0" "<% if (check_subsidyinstrument0) { %> checked <% } %>">
              <label class="govuk-label govuk-checkboxes__label" for="subsidyinstrument-0">
                Select all
              </label>
            </div>

            <div class="govuk-checkboxes__conditional" id="conditional-subsidyinstrument0">
              <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="subsidyinstrument" name="subsidyinstrument1" type="checkbox"
                  value="Direct Grant" data-aria-controls="conditional-subsidyinstrument"
                  <% if (check_subsidyinstrument1) { %> checked <% } %>>
                <label class="govuk-label govuk-checkboxes__label" for="subsidyinstrument">
                  Direct Grant
                </label>
              </div>

              <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="subsidyinstrument-1" name="subsidyinstrument2"
                  type="checkbox" value="Equity" data-aria-controls="conditional-subsidyinstrument-1"
                  <% if (check_subsidyinstrument2) { %> checked <% } %>>
                <label class="govuk-label govuk-checkboxes__label" for="subsidyinstrument-1">
                  Equity
                </label>
              </div>

              <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="subsidyinstrument-2" name="subsidyinstrument3"
                  type="checkbox" value="Guarantee" data-aria-controls="conditional-subsidyinstrument-2"
                  <% if (check_subsidyinstrument3) { %> checked <% } %>>
                <label class="govuk-label govuk-checkboxes__label" for="subsidyinstrument-2">
                  Guarantee
                </label>
              </div>

              <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="subsidyinstrument-3" name="subsidyinstrument4"
                  type="checkbox" value="Loan" data-aria-controls="conditional-subsidyinstrument-3"
                  <% if (check_subsidyinstrument4) { %> checked <% } %>>
                <label class="govuk-label govuk-checkboxes__label" for="subsidyinstrument-3">
                  Loan
                </label>
              </div>

              <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="subsidyinstrument-4" name="subsidyinstrument5"
                  type="checkbox" value="Provision of goods or services below market prices"
                  data-aria-controls="conditional-subsidyinstrument-4" <% if (check_subsidyinstrument5) { %> checked
                  <% } %>>
                <label class="govuk-label govuk-checkboxes__label" for="subsidyinstrument-4">
                  Provision of goods or services below market prices

                </label>
              </div>

              <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="subsidyinstrument-5" name="subsidyinstrument6"
                  type="checkbox" value="Purchase of goods or services above market prices"
                  data-aria-controls="conditional-subsidyinstrument-5" <% if (check_subsidyinstrument6) { %> checked
                  <% } %>>
                <label class="govuk-label govuk-checkboxes__label" for="subsidyinstrument-5">
                  Purchase of goods or services above market prices
                </label>
              </div>



              <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="subsidyinstrument-6" name="subsidyinstrument7"
                  type="checkbox" value="Tax measures (tax credit, or tax/duty exemption)"
                  data-aria-controls="conditional-subsidyinstrument-6" <% if (check_subsidyinstrument7) { %> checked
                  <% } %>>
                <label class="govuk-label govuk-checkboxes__label" for="subsidyinstrument-6">
                  Tax measures (tax credit, or tax/duty exemption)

                </label>
              </div>

              <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" id="subsidyinstrument-7" name="subsidyinstrument8"
                  type="checkbox" value="Other" data-aria-controls="conditional-subsidyinstrument-7"
                  <% if (check_subsidyinstrument8_pass) { %> checked <% } %>>
                <label class="govuk-label govuk-checkboxes__label" for="subsidyinstrument-7">
                  Other
                </label>
              </div>

              <div class="govuk-checkboxes__conditional " id="conditional-subsidyinstrument-71">
                <div class="govuk-form-group">
                  <p class="govuk-body govuk-label-other" for="subsidyinstrument-7">
                    Enter the type of subsidy that you want to search for
                  </p>
                  <% if (check_subsidyinstrument9_pass) { %> %>
                  <input class="govuk-input govuk-!-width-one-half" id="subsidyinstrument-7" name="subsidyinstrument9"
                    type="subsidyinstrument" spellcheck="false" value="<%= check_subsidyinstrument9_pass %>">
                  <% } else { %>
                  <input class="govuk-input govuk-!-width-one-half" id="subsidyinstrument-7" name="subsidyinstrument9"
                    type="subsidyinstrument" spellcheck="false">
                  <% }  %>
                </div>
              </div>

            </div>
          </div>


        </fieldset>

        <button class="govuk-button" data-module="govuk-button">
          Continue </button>

      </form>

    </main>
