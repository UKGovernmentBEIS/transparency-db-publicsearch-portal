<!DOCTYPE html>
<html lang="en">

<head>
  <title>Scheme <%= searchmeasuredetails.scNumber %> - Search for UK Subsidies - GOV.UK - Public user search subsidy scheme details page</title>
  <%- include('../partials/headercss.ejs') %>
  <link href="/assets/stylesheet/style.css" rel="stylesheet" type="text/css">
  <style>
    .govuk-inative-status {
      float: left;
      width: 100%;
      padding: 1%;
    }
  </style>
</head>

<body class="govuk-template__body app-example-page">
  <%- include('../partials/cookies-consent.ejs') %>
  <%- include('../partials/header.ejs') %>
  <div class="govuk-width-container ">
    <%- include('../partials/banner.ejs') %>
    <main id="main-content" role="main">
      <div class="govuk-main-wrapper ">
        <a href="/schemes" class="govuk-back-link" aria-label="Back to search results page">Back</a>
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-three-quarters">
            <h1 class="govuk-heading-l">
              Subsidy scheme details
            </h1>
          </div>

          <div class="govuk-grid-column-one-quarter">
            <button class="govuk-button_cancel_last_xl" data-module="govuk-button" onclick="window.print()">
              Print page </button>
          </div>
        </div>
        <div class="govuk-form-group">
          <label class="govuk-label">
            Overview of the subsidy scheme and the public authority that awarded it.
          </label>
        </div>
        <!-- Reject Message Block -->
        <% if(searchmeasuredetails.status === "Inactive") {%>
          <div class="govuk-form-group app-example">
            <div class="app-example__toolbar">
              <label>Comments</label>
            </div>
            <div class="app-example__frame">
              <% if(searchmeasuredetails.reason && searchmeasuredetails.reason.length > 0) { %>
              <p> <%= searchmeasuredetails.reason %></p>
              <% } else { %>
              <p>The subsidy measure <% if( searchmeasuredetails.status=="Inactive"){
               %> deactivation <%
               } else {%> deletion<%}%> reason not mentioned </p>
            <% } %>
            </div>
          </div>
          <% } %>
        <!-- Reject Message Block -->
        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Subsidy control number
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.scNumber %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Subsidy scheme name
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.subsidyMeasureTitle%>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Subsidies or Schemes of Interest (SSoI) or Subsidies or Schemes of Particular Interest (SSoPI)
          </dt>
          <dd class="govuk-summary-list__value">
            <%= searchmeasuredetails.subsidySchemeInterest %>
          </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Subsidy scheme status
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.status %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Public authority name
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.grantingAuthorityName %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Specific Policy Objective
            </dt>
            <dd class="govuk-summary-list__value render-newlines"><%= searchmeasuredetails.specificPolicyObjective %></dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Subsidy scheme description
            </dt>
            <dd class="govuk-summary-list__value render-newlines"><%= searchmeasuredetails.subsidySchemeDescription %></dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Legal basis
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.legalBasis.legalBasisText %>
            </dd>
          </div>

          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Weblink to public authority text of subsidy
            </dt>
            <dd class="govuk-summary-list__value">
              <% if(searchmeasuredetails.gaSubsidyWebLink.includes('https://') || searchmeasuredetails.gaSubsidyWebLink.includes('http://')) { %>
              <a aria-label="Weblink to public authority" target="_blank"
                href="<%= searchmeasuredetails.gaSubsidyWebLink %>">
                <%= searchmeasuredetails.gaSubsidyWebLink %>

              </a>
              <% } else { %>
              <a aria-label="Weblink to public authority" target="_blank"
                href="https://<%= searchmeasuredetails.gaSubsidyWebLink %>">
                <%= searchmeasuredetails.gaSubsidyWebLink %>
              </a>
              <% } %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Weblink description
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.gaSubsidyWebLinkDescription %>
            </dd>
          </div>

          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Budget or amount
            </dt>
            <dd class="govuk-summary-list__value">
              Â£<%= searchmeasuredetails.budget %>
            </dd>
          </div>
            <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Maximum amount given under this scheme
            </dt>
            <dd class="govuk-summary-list__value">
              <% if (searchmeasuredetails.maximumAmountUnderScheme == null) { %>
                NA
              <% } else { %>
                <%= searchmeasuredetails.maximumAmountUnderScheme %>
              <% } %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Confirmation date
            </dt>
            <dd class="govuk-summary-list__value">
              <% if (searchmeasuredetails.confirmationDate != null) { %>
                <%= searchmeasuredetails.confirmationDate %>
              <% } else { %>
                NA
              <% } %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Duration
            </dt>
            <dd class="govuk-summary-list__value">
              <% if ((searchmeasuredetails.duration == 0) || (searchmeasuredetails.endDate == "31 December 9999")) { %>
                NA
              <% } else { %>
                <%= searchmeasuredetails.duration %> days from <%= searchmeasuredetails.startDate %> to
                <%= searchmeasuredetails.endDate %>
              <% } %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Start date
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.startDate %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Date published
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.publishedMeasureDate%>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Date created
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.createdTimestamp%>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Date last modified
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.lastModifiedTimestamp%>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Spending Sectors
            </dt>
            <dd class="govuk-summary-list__value">
                <% if(typeof spendingSectorArray !== 'undefined') { %>
                  <ul class="govuk-list govuk-list--bullet">
                      <% spendingSectorArray.forEach(function(item) { %>
                      <li> <%=item %> </li>
                      <% }); %>
                  </ul>
                  <% } else { %>
                      NA
                   <% } %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Purpose
            </dt>
            <dd class="govuk-summary-list__value">
                <% if(typeof purposeArray !== 'undefined') { %>
                  <ul class="govuk-list govuk-list--bullet">
                      <% purposeArray.forEach(function(item) { %>
                      <li> <%=item %> </li>
                      <% }); %>
                  </ul>
                  <% } else { %>
                      NA
                   <% } %>
            </dd>
          </div>
        </dl>

        <% if(schemeVersions.length > 0) { %>
          <div>
              <h2 class="govuk-heading-m">Previous versions of scheme</h2>
              <%- include('../partials/scheme-version-list-partial.ejs') %>
          </div>
      <% } %>

        <div>
          <div>
              <h2 class="govuk-heading-m">Subsidy awards given under this subsidy scheme</h2>
              <%- include('../partials/award-list-partial.ejs') %>
          </div>
        </div>

        <form action="/schemes" method="GET">
          <div>
            <button class="govuk-button" data-module="govuk-button">
              Back to search results </button>
          </div>
        </form>
      </div>
    </main>
  </div>

  <%- include('../partials/footer.ejs') %>
</body>

</html>