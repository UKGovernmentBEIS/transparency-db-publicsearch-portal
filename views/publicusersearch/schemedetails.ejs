</head>

<body class="govuk-template__body app-example-page">
  <%- include('../partials/cookies-consent.ejs') %>
  <%- include('../partials/header.ejs') %>
  <div class="govuk-width-container ">

    <main id="main-content" role="main">
      <%- include('../partials/banner.ejs') %>

      <div class="govuk-main-wrapper ">
        <a href="/schemes" class="govuk-back-link" aria-label="Back to search results page">Back</a>
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-three-quarters">
            <!-- <legend class="govuk-fieldset__legend govuk-fieldset__legend--l"> -->
            <h1 class="govuk-heading-l">
              Subsidy scheme details
              <!-- <%= searchmeasuredetails.subsidyMeasureTitle%> -->
            </h1>
            <!-- </legend> -->
          </div>

          <div class="govuk-grid-column-one-quarter">
            <!-- <form action="/homepage" method="POST" >         -->
            <button class="govuk-button_cancel_last_xl" data-module="govuk-button" onclick="window.print()">
              Print page </button>
            <!-- </form>   -->
          </div>
        </div>
        <div class="govuk-form-group">
          <label class="govuk-label">
            Overview of the subsidy scheme and the local authority that awarded it.
          </label>
        </div>
        <!-- Reject Message Block -->

        <% if( searchmeasuredetails.status == "Inactive") { %>
        <div class="govuk-form-group app-example govuk-inative-status">
          <div class="app-example__toolbar">
            <label>This scheme is not active</label>
          </div>
        </div>

        <!-- <div class="govuk-form-group app-example">
        <div class="app-example__toolbar">
          <label>This scheme is not active</label>
        </div> -->
        <!-- <div class="app-example__frame">
          <% if(searchmeasuredetails.rejectReason) { %>
          <p> <%= searchmeasuredetails.rejectReason %></p>
          <% } else { %>
          <p>The subsidy scheme deleted reason not mentioned </p>
          <% } %>
        </div> -->
        <!-- </div> -->

        <% } %>
        <!-- Reject Message Block -->
        <ul class="govuk-summary-list govuk-!-margin-bottom-9">

          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Subsidy scheme name
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.subsidyMeasureTitle%>
            </dd>
          </div>

          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Subsidy control number
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.scNumber %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Subsidy scheme status
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.status %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Granting authority name
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.grantingAuthorityName %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Legal basis
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.legalBasis.legalBasisText %>
            </dd>
          </div>

          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Weblink to granting authority text of subsidy
            </dt>
            <dd class="govuk-summary-list__value">
              <% if(searchmeasuredetails.gaSubsidyWebLink.includes('https://') || searchmeasuredetails.gaSubsidyWebLink.includes('http://')) { %>
              <a aria-label="Weblink to granting authority" target="_blank"
                href="<%= searchmeasuredetails.gaSubsidyWebLink %>">
                <%= searchmeasuredetails.gaSubsidyWebLink %>

              </a>
              <% } else { %>
              <a aria-label="Weblink to granting authority" target="_blank"
                href="https://<%= searchmeasuredetails.gaSubsidyWebLink %>">
                <%= searchmeasuredetails.gaSubsidyWebLink %>
              </a>
              <% } %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Weblink description
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.gaSubsidyWebLinkDescription %>
            </dd>
          </div>

          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Case type
            </dt>
            <dd class="govuk-summary-list__value">
              <% if (searchmeasuredetails.adhoc == false) { %>
              Regular case
              <% } else { %>
              Ad hoc case
              <% } %>

            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Budget or amount
            </dt>
            <dd class="govuk-summary-list__value">
              Â£<%= searchmeasuredetails.budget %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Duration
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.duration %> days from <%= searchmeasuredetails.startDate %> to
              <%= searchmeasuredetails.endDate %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Notification or registration date
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.startDate %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Date published
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.publishedMeasureDate%>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Date & time created
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.createdTimestamp%>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Date & time last modified 
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.lastModifiedTimestamp%>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Created by
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.createdBy%>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Approved by
            </dt>
            <dd class="govuk-summary-list__value">
              <%= searchmeasuredetails.approvedBy%>
            </dd>
          </div>
        </ul>


        <form action="/schemes" method="GET">
          <div>
            <button class="govuk-button" data-module="govuk-button">
              Back to search results </button>
          </div>
        </form>
      </div>
    </main>
  </div>

  <%- include('../partials/footer.ejs') %>
</body>

</html>