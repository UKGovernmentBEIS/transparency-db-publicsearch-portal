<!DOCTYPE html>
<html lang="en">

<head>
  <title>GOV.UK - Public user search page</title>
</head>
    <!-- <%- include('../partials/header.ejs') %> -->

    <%- include('../partials/headersubsidy.ejs') %>

 
    
    <div class="govuk-width-container ">
      <%- include('../partials/banner.ejs') %>
      <main class="govuk-main-wrapper " id="main-content" role="main">       
        <form action="/homepage" method="POST" > 
       <div class="govuk-breadcrumbs ">
         <ol class="govuk-breadcrumbs__list">
           <li class="govuk-breadcrumbs__list-item">
             <a class="govuk-breadcrumbs__link" href="/homepage">Home</a>
           </li>
           <li class="govuk-breadcrumbs__list-item">
             <a class="govuk-breadcrumbs__link" href="/beneficiaryname">Search subsidy awards</a>
           </li>
         </ol>
       </div>
     
       <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
        <h1 class="govuk-fieldset__heading">
          Search results
        </h1>
      </legend>

      <section>
       <table class="govuk-table">
        <caption class="govuk-table__caption"><h1 class="govuk-fieldset__heading"></h1></caption>
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header" aria-sort="ascending">Beneficiary Name</th>
            <th scope="col" class="govuk-table__header app-custom-class" >Subsidy measure title</th>
            <th scope="col" class="govuk-table__header app-custom-class" aria-sort="none">Subsidy Amount(Â£)</th>
            <th scope="col" class="govuk-table__header app-custom-class">Subsidy objective</th>         
            <th scope="col" class="govuk-table__header app-custom-class">Subsidy instrument</th>
            <th scope="col" class="govuk-table__header app-custom-class">Spending Sector</th>
            <th scope="col" class="govuk-table__header app-custom-class" aria-sort="none">Legal granting Date</th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">
          <% searchawards.awards.forEach(function(item) { %>
            <tr>
              <td class="govuk-table__cell"><%= item.beneficiary.beneficiaryName  %></td>
              <td class="govuk-table__cell"><%= item.subsidyMeasure.subsidyMeasureTitle  %></td>
              <% if (item.subsidyInstrument == "Tax measures (tax credit, or tax/duty exemption)") { %>
              <td class="govuk-table__cell"><%= item.subsidyFullAmountRange %></td> 
              <% } else { %>  
              <td class="govuk-table__cell"><%= item.subsidyFullAmountExact %></td>  
              <% } %>
              <td class="govuk-table__cell"><%= item.subsidyObjective %></td> 
              <td class="govuk-table__cell"><%= item.subsidyInstrument %></td> 
              <td class="govuk-table__cell"><%= item.spendingSector %></td> 
              <td class="govuk-table__cell"><%= item.legalGrantingDate%></td> 
             
            </tr>
  
            <% } ); %>
   
        </tbody>
      </table>
 
      <!-- ********************** -->
      <!-- Pagination starts here -->
      <!-- ********************** -->

     
        <!-- <div class="col first">
            <p class="pagination-label">
                Viewing <span>1-10</span> of <span>36</span>
            </p>
        </div> -->
